/* NHS blue palette */
:root {
  --accent: #005eb8; /* NHS Blue */
  --accent-light: #0072ce;
  --text: #333;
  --bg: #f9f9fb;
  --white: #fff;
}

* {
  box-sizing: border-box;
}

body {
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  margin: 0;
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
}

/* ---------- Header ---------- */
header {
  text-align: center;
  padding: 2rem 1rem 1rem;
}

header h1 {
  color: var(--accent);
  margin-bottom: 0.25rem;
}

header p {
  color: #555;
  font-size: 1rem;
}

/* ---------- Nav bar ---------- */
nav {
  text-align: center;
  background: var(--accent);
  padding: 0.75rem;
}

nav a {
  color: var(--white);
  margin: 0 0.8rem;
  text-decoration: none;
  font-weight: 500;
}

nav a:hover {
  text-decoration: underline;
}

/* ---------- Main content ---------- */
main {
  max-width: 900px;
  margin: 2rem auto;
  padding: 1.5rem;
  background: var(--white);
  border-radius: 1rem;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

section + section {
  margin-top: 1.8rem;
}

h2 {
  color: var(--accent);
  margin-bottom: 0.5rem;
}

ul {
  padding-left: 1.2rem;
}

li {
  margin-bottom: 0.3rem;
}

/* ---------- Buttons ---------- */
.btn {
  display: inline-block;
  margin-right: 0.5rem;
  margin-bottom: 0.5rem;
  padding: 0.6rem 1rem;
  background: var(--accent-light);
  color: var(--white);
  border-radius: 0.6rem;
  text-decoration: none;
  transition: background 0.2s ease-in-out;
  font-weight: 500;
}

.btn:hover {
  background: var(--accent);
}

/* ---------- Footer ---------- */
footer {
  text-align: center;
  padding: 1rem;
  font-size: 0.9rem;
  color: #666;
}

/* ---------- Footer bar ---------- */
footer {
  background: var(--accent);
  color: white;
  padding: 1rem 0;
  margin-top: 2rem;
  font-size: 0.9rem;
}

.footer-container {
  max-width: 950px;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 1.5rem;
}

.footer-left, .footer-right {
  flex: 1 1 300px;
}

.footer-left img {
  display: block;
  margin-bottom: 0.3rem;
}

.footer-left p, .footer-right p {
  margin: 0.2rem 0;
}

.footer-right a {
  color: #cce0ff;
  text-decoration: none;
}

.footer-right a:hover {
  text-decoration: underline;
}
